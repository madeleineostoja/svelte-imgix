{
  "compilerOptions": {
    // Modules
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Type checking
    "strict": true,
    "allowJs": true,
    "lib": ["dom", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Misc
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist"
  },
  "include": ["src", "@types"]
}
